<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    app:behavior_overlapTop="78dp"
    android:fillViewport="true"
    android:background="@color/lightestGrey"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mgassociates.bluefin.docs.Activities.SubCategoryActivity"
    tools:showIn="@layout/activity_sub_category">

    <android.support.v7.widget.CardView
        android:id="@+id/flexible.example.cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        >

       <android.support.v7.widget.RecyclerView
           android:id="@+id/subCategoryRecyclerView"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingTop="@dimen/mainMargin"
           android:paddingLeft="@dimen/smallMargin"
           android:background="@color/materialWhite"
          />
    </android.support.v7.widget.CardView>

</android.support.v4.widget.NestedScrollView>
