<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/smallMargin"
    android:padding="@dimen/mainMargin">

    <LinearLayout
        android:id="@+id/stepLL"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/circular_shape"
        android:gravity="center">
        <TextView
            android:id="@+id/stepNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/materialWhite"
            android:text="1"
            android:textSize="@dimen/textSizeBig"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/stepTExtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/stepLL"
        android:layout_centerVertical="true"
        android:text="Steps here"
        android:fontFamily="@font/monoglyceride"
        android:layout_marginLeft="@dimen/fab_margin"
        android:textSize="@dimen/textSizeNormal"/>


</RelativeLayout>