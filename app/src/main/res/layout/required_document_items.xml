<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/materialWhite"
    android:layout_marginBottom="@dimen/smallMargin"
    android:padding="@dimen/mainMargin">

    <ImageView
        android:id="@+id/docImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/document_icon"
        android:layout_marginTop="@dimen/mainMargin"
        android:layout_marginBottom="@dimen/mainMargin"
        android:layout_centerVertical="true"/>


    <TextView
        android:id="@+id/docName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/fab_margin"
        android:fontFamily="@font/monoglyceride"
        android:text="Name of document"
        android:textSize="@dimen/text_margin"
        android:layout_toRightOf="@id/docImageView"
        android:layout_centerVertical="true"/>
</RelativeLayout>